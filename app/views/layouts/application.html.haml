!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Wedding
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    %link{:href => "https://use.typekit.net/mvo6exe.css", :rel => "stylesheet"}/
    %link{:href => "/semantic/dist/semantic.min.css", :rel => "stylesheet"}/
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag '/semantic/dist/semantic.min.js'
    = javascript_include_tag 'https://cdn.jsdelivr.net/npm/canvas-confetti@1.4.0/dist/confetti.browser.min.js'
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
  %body{style: 'background-color: #FCE300'}
    .ui.large.yellow.inverted.top.fixed.secondary.menu
      .ui.container
        = link_to '#home', class: 'item', data: { turbolinks: false } do
          .ui.header Home
        = link_to '#plan', class: 'item', data: { turbolinks: false } do
          .ui.header Plan
        = link_to '#gifts', class: 'item', data: { turbolinks: false } do
          .ui.header Gifts
        = link_to '#info', class: 'item', data: { turbolinks: false } do
          .ui.header Info
        = link_to '#rsvp', class: 'item', data: { turbolinks: false } do
          .ui.header RSVP
    %div{style: "margin-top: 45px"}
      = yield
